<%- include("../partials/admin_header.ejs") %>

  <section>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h3 class="mb-5">Add Project</h3>
                <form  action="/admin/add_details/<%= project.id %>" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <select class="contact-input form-select mb-3" name="type" aria-label="Default select example">
                                <option value="" disabled="" selected=""><%= project.type_name %></option>
                            </select>
                        </div>
                        <br/>
                        <div class="mb-3">
                            <input type="text" class="contact-input" name="projectName" value="<%= project.project_name %>"  disabled>
                        </div>
                        <br/>
                        <div class="mb-3">
                            <label  for="thumbnail">Thumbnail</label>
                             <% if (project.thumbnail) { %>
                                <img
                                src="/uploads/<%= project.thumbnail %>"
                                alt="<%= project.project_name %>"
                                class="img-responsive"
                                style="max-width: 250px; margin-top: 10px;"
                                >
                            <% } else { %>
                                <p class="text-muted">No thumbnail uploaded</p>
                            <% } %>
                        </div>
                        
                        <br/>
                        <div class="mt-3">
                            <label  for="description">Description</label>
                            <textarea name="description" class="contact-input"  disabled><%= project.description %></textarea>
                            
                        </div>
                        <br/>
                        <div>
                            <label for="images">Images</label>
                            <input type="file" name="images" class="contact-input" multiple required>
                        </div>
                        <div class="mt-3">
                            <button type="submit" name="submit" class="ot-btn border-dark btn-contact">Add</button>
                        </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>

        
    
    </div>
</section>


<%- include("../partials/admin_footer.ejs") %>